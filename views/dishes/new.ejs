<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dishes</title>
    <%- include('../partials/header.ejs') %>
</head>

<body>
    <%- include('../partials/navBar') %>

        <form action="/dishes" method="POST">
            <div class="container">
                <div class="card rounded z-depth-2">
                    <h1>Create a New Dish</h1>
                    <div class="input-field">
                        <input type="text" name="name" id="name" required>
                        <label for="name">Dish Name</label>
                    </div>
                    <div class="input-field">
                        <input type="text" name="description" id="description">
                        <label for="description">Description</label>
                    </div>
                    <div class="input-field">
                        <input type="number" name="servings" id="servings" required>
                        <label for="servings">Servings</label>
                    </div>
                    <div class="input-field">
                        <input type="text" name="dietaryAccommodations" id="dietaryAccommodations">
                        <label for="dietaryAccommodations">Dietary Accommodations</label>
                    </div>
                    <h5>Category</h5>
                    <div class="radio-group">
                        <% categories.forEach(function(category) { %>
                            <label>
                                <input type="radio" name="category" value="<%= category %>" <%= category === 'Other' ? 'checked' : '' %>>
                                <span><%= category %></span>
                            </label>
                        <% }) %>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit">Create Dish</button>
                    <a href="/account" class="waves-effect waves-light btn">Back to Dashboard</a>
                </div>
            </div>