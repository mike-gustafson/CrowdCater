<div class="responsive-container">
  <h2 class="dish-name"><%= dish.name %></h2>    
  <div class="row">
    <div class="col s6">
      <%- include('./_favorite') %>
    </div>  
    <div class="col s6">
      <span class="dish-creator-name">By <%= dishCreatorName %></span>
    </div>  
  </div>  
</div>
<hr>
<div class="row dish-info">
  <div class="col s6">
    <span class="bold">Type:</span> <%= dish.category.toUpperCase() %>
  </div>
  <div class="col s6">
    <span class="bold">Servings:</span> <%= dish.servings %>
  </div>
</div>
<span class="bold s12">Description:</span>
<p class="description margin-0"><%= dish.description %></p>
<hr>
<div class="content-section">
  <span class="bold">Dietary Accommodations</span><br> 
  <% if (dish.diets.length > 1) { %>
    <% dish.diets.forEach(diet => { %> 
    <span><%= diet %> | </span>
    <% }) %> 
  <% } else { %>
    <% dish.diets.forEach(diet => { %> 
    <span><%= diet %></span>
    <% }) %>
  <% } %>
</div>