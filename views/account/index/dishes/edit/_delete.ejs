<form id="delete-form" action="/dishes/<%= dish.id %>?_method=DELETE" method="POST" onsubmit="return confirmDelete();">
  <button class="waves-effect waves-light btn red lighten-1" type="submit">Delete</button>
</form>

<script>
  function confirmDelete() {
    return confirm('Are you sure you want to delete this dish? This action cannot be undone.')
  }
</script>